---
type Props = {
  href: string;
  image: string;
  title: string;
};

const { href, image, title } = Astro.props;
---

<a href={href} class="dropdown-item">
  <img src={image} alt={title} />
  <span>{title}</span>
</a>

<style>
  .dropdown-item {
    display: flex;
    align-items: center;
    padding: 0.5rem 1rem;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--black);
    border-bottom: 1px solid #eee;
  }

  .dropdown-item:hover {
    color: #666;
    transition: color 0.3s ease;
  }

  .dropdown-item img {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    border: 1px solid #ddd;
    object-fit: contain;
    overflow: hidden;
    flex-shrink: 0;
  }

  .dropdown-item span {
    font-size: 0.9rem;
    overflow: hidden;
    white-space: nowrap;
  }
</style>

<style is:global>
  .dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(-10px);
    transition: all 0.3s ease;
  }
</style>
