---
type Props = {
  motifName: string;
  date: string;
  image: string;
};

const { motifName, date, image } = Astro.props;
---

<div class="illust-card">
  <img src={image} alt={motifName} class="illust-image" />
  <div class="illust-info">
    <p>名前：{motifName}</p>
    <p>作成日：{date}</p>
  </div>
</div>

<style>
  .illust-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    justify-content: center;
    gap: 0.5rem;
    border-radius: 10px;
    border: 1px solid rgba(0, 0, 0, 0.5);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-in-out;
  }

  .illust-card:hover {
    transform: translateY(-10px);
  }

  .illust-image {
    padding-top: 1rem;
    width: 300px;
    height: 300px;
    object-fit: cover;
  }

  .illust-info {
    position: absolute;
    padding-left: 0.5rem;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    font-weight: bold;
    font-size: 0.85rem;
    border-radius: 0 0 10px 10px;
  }
</style>
